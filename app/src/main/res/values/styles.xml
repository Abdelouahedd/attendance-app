<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
    </style>

    <style name="card">
        <item name="android:background">@drawable/gradient_dark_light</item>
        <item name="android:textColor">#fafafa</item>
    </style>

    <!-- home ui -->
    <style name="hm_card_item">
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:elevation">2dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableStart">@drawable/ic_notifications_black_24dp</item>
    </style>
    <style name="hm_appname">
        <item name="android:layout_marginVertical">36dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="hm_date">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="hm_usertext">
        <item name="android:paddingVertical">30dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>
    <style name="hm_card">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- profile ui -->
    <style name="pr_pic">
        <item name="civ_border_color">@color/colorBackground</item>
        <item name="civ_border_width">4dp</item>
        <item name="civ_shadow">true</item>
        <item name="civ_shadow_radius">10dp</item>
        <item name="civ_shadow_color">@color/colorPrimaryLight</item>
    </style>
    <style name="pr_username">
        <item name="android:paddingHorizontal">25dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="pr_jobtitle">
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="pr_editbutton">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="fabSize">mini</item>
        <item name="android:src">@drawable/ic_edit_white_24dp</item>
        <item name="tint">#fafafa</item>
    </style>
    <style name="pr_card">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">30dp</item>
        <item name="elevation">10dp</item>
    </style>
    <style name="pr_card_sidebar_text">
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">monospace</item>
        <item name="android:rotation">-90</item>
        <item name="android:textColor">#fafafa</item>
    </style>
    <style name="pr_card_key">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    <style name="pr_card_value">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- header -->
    <style name="header">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="header_title">
        <item name="android:textSize">@dimen/header_title_textsize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="header_subtitle">
        <item name="android:textSize">@dimen/header_subtitle_textsize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#fafafa</item>
    </style>

    <!-- search input : wrap edit text inside of text input layout -->
    <style name="search_input_layout">
        <!-- TextInputLayout -->
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:paddingHorizontal">@dimen/search_input_hpadding</item>
        <item name="startIconDrawable">@drawable/ic_search_black_24dp</item>
        <item name="android:hint">@string/search_input_hint</item>
    </style>
    <style name="search_input">
        <!-- TextInputEditText -->
        <item name="background">@color/colorBackground</item>
        <item name="android:backgroundTint">#ffffff</item>
    </style>

    <!-- list view item -->
    <style name="rounded_border">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/shape_class_item</item>
        <item name="layout_constraintCircleRadius">10dp</item>
    </style>

    <!-- list item -->
    <style name="li_title">
        <item name="android:textSize">@dimen/li_title_textsize</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
    <style name="li_subtitle">
        <item name="android:textSize">@dimen/li_subtitle_textsize</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="li_key">
        <item name="android:paddingLeft">@dimen/label_padding_left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
<!--        <item name="android:textColor">@color/colorPrimary</item>-->
    </style>
    <style name="li_value">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- stats cards -->
    <style name="st_card">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="st_card_key">
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/st_card_key_padding</item>
        <item name="android:textSize">@dimen/st_card_key_textsize</item>
    </style>
    <style name="st_card_value">
        <item name="android:background">@color/cardview_shadow_end_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/st_card_value_padding</item>
        <item name="android:textSize">@dimen/st_card_value_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="st_classes_layout">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">30dp</item>
    </style>
    <style name="st_class_label">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>


<!--    material design icon button-->
    <style name="icononly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>
