<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
    </style>


    <!-- header -->
    <style name="header">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="header_title">
        <item name="android:textSize">@dimen/header_title_textsize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="header_subtitle">
        <item name="android:textSize">@dimen/header_subtitle_textsize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#fafafa</item>
    </style>

    <!-- search input : wrap edit text inside of text input layout -->
    <style name="search_input_layout">
        <!-- TextInputLayout -->
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:paddingHorizontal">@dimen/search_input_hpadding</item>
        <item name="startIconDrawable">@drawable/ic_search_black_24dp</item>
        <item name="android:hint">@string/search_input_hint</item>
    </style>
    <style name="search_input">
        <!-- TextInputEditText -->
        <item name="background">@color/colorBackground</item>
        <item name="android:backgroundTint">#ffffff</item>
    </style>


    <!-- list item -->
    <style name="li_title">
        <item name="android:textSize">@dimen/li_title_textsize</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
    <style name="li_subtitle">
        <item name="android:textSize">@dimen/li_subtitle_textsize</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="li_key">
        <item name="android:paddingLeft">@dimen/label_padding_left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
<!--        <item name="android:textColor">@color/colorPrimary</item>-->
    </style>
    <style name="li_value">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- stats cards -->
    <style name="st_card">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="st_card_key">
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/st_card_key_padding</item>
        <item name="android:textSize">@dimen/st_card_key_textsize</item>
    </style>
    <style name="st_card_value">
        <item name="android:background">@color/cardview_shadow_end_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/st_card_value_padding</item>
        <item name="android:textSize">@dimen/st_card_value_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="st_classes_layout">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">30dp</item>
    </style>
    <style name="st_class_label">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>
</resources>
